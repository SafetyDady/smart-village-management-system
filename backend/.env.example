# Smart Village Management System - Environment Variables

# Application Settings
SECRET_KEY=changeme_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/smart_village
TEST_DATABASE_URL=sqlite:///./test.db

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# LINE Platform Integration
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# LIFF Configuration
LIFF_ID=your_liff_app_id

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_SSL=false

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=false
ENVIRONMENT=development

# External Services
PAYMENT_GATEWAY_URL=https://api.payment-provider.com
PAYMENT_API_KEY=your_payment_api_key

# Notification Services
LINE_NOTIFY_TOKEN=your_line_notify_token
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_api_key

